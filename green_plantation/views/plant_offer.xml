<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="plant_offer_view_tree" model="ir.ui.view">
        <field name="name">offer.tree</field>
        <field name="model">plant.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check" />                                                                        
                <button name="action_cancle" title="Cancle" type="object" icon="fa-close" />
                <field name="status"/>
            </tree>
        </field>

    </record>

    <record id="plant_offer_view_form" model="ir.ui.view">
        <field name="name">offer.form</field>
        <field name="model">plant.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" title="Accept" type="object" icon="fa-check" attrs="{'invisible':[('status','in',('accept','refused'))]}"/>
                <button name="action_cancle" title="Cancle" type="object" icon="fa-close" attrs="{'invisible':[('status','in',('accept','refused'))]}"/>
                <field name="status"/>
            </tree>
        </field>

    </record>
</odoo>