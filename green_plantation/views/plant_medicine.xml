<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="plant_medicine_product" model="ir.actions.act_window">
            <field name="name">Medicine</field>
            <field name="res_model">plant.medicine</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enter Your First Record!!
                </p>
            </field>
    </record>
    <record id="plant_medicine_product_tree_view" model="ir.ui.view">
        <field name="name">Medicine</field>
        <field name="model">plant.medicine</field>
        <field name="arch" type="xml">
            <tree string="Prpperties">
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="plant_medicine_product_form_view" model="ir.ui.view">
        <field name="name">Plant_product</field>
        <field name="model">plant.medicine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name" string="Plant Medicine"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Medicine">  
                            <field name = "medicine_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>