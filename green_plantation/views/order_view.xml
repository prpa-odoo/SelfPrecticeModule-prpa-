<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="order_action" model="ir.actions.act_window">
        <field name="name">Order</field>
        <field name="res_model">order.orders</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter Your First Record!!
            </p>
        </field>
    </record>

    <record id="plant_order_tree_view" model="ir.ui.view">
        <field name="name">Medicine</field>
        <field name="model">order.orders</field>
        <field name="arch" type="xml">
            <tree string="Prpperties">
                <field name="name" />
                <field name="product_ids" widget="many2many_tags"/>                           
                <!-- <field name="description"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="taxes"/>
                <field name="sub_total"/> -->
            </tree>
        </field>
    </record>
    <record id="plant_order_form_view" model="ir.ui.view">
        <field name="name">Plant_product</field>
        <field name="model">order.orders</field>
        <field name="arch" type="xml">
                <!-- <header>
                    <button name="action_send_email" string="Send by email" type="object" widget="email"/>
                </header>                 -->
                <!-- <button name="action_confirm"  title="Confirm" type="object" string="Confirm"/> -->

            <form>
                <h1>
                    <field name="name"/>
                </h1>
                <notebook>
                    <page string="Properties">  
                            <field name="product_ids"/>
                            <field name="quantity"/>    
                    </page>
                </notebook>
            </form>
        </field>
    </record>
</odoo>
